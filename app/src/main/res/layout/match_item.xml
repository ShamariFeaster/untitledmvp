<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
   >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match_item_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/match_item_username"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/match_item_avatar"
        android:layout_toEndOf="@+id/match_item_avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/match_item_last_message"
        android:layout_toRightOf="@+id/match_item_avatar"
        android:layout_toEndOf="@+id/match_item_avatar"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/match_item_avatar"
        android:layout_below="@+id/match_item_username" />
</RelativeLayout>
